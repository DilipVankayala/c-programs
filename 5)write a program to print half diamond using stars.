#include <stdio.h>
void print_half_diamond(int n) {
    for (int i=1;i<=n;i++) {
        for (int j=0;j<i;j++) {
            printf("*");
        }
        printf("\n");
    }
    for (int i=n-1;i>0;i--) {
        for (int j=0;j<i;j++) {
            printf("*");
        }
        printf("\n");
    }
}
int main() {
    int n = 4; 
    print_half_diamond(n);
    return 0;
}
